@model HomepageNewsItemsModel

@if (Model.NewsItems.Any())
{
    <link href="~/Plugins/Misc.News/Content/styles.css" rel="stylesheet">
    <div class="news-list-homepage">
        <div class="title">
            <strong>@T("Plugins.Misc.News.Title")</strong>
        </div>
        <div class="news-items">
            @foreach (var item in Model.NewsItems)
            {
                <div class="news-item">
                    <div class="news-head">
                        <a class="news-title" href="@(Url.RouteUrl(NewsDefaults.Routes.Public.NewsItemRouteName, new { SeName = item.SeName }))">@item.Title</a>
                        <span class="news-date">-@item.CreatedOn.ToString("D")</span>
                    </div>
                    <div class="news-body">
                        @Html.Raw(item.Short)
                    </div>
                    <div class="buttons">
                        <a href="@(Url.RouteUrl(NewsDefaults.Routes.Public.NewsItemRouteName, new { SeName = item.SeName }))" class="read-more">@T("Plugins.Misc.News.MoreInfo")</a>
                    </div>
                </div>
            }
        </div>
        <div class="view-all">
            <a href="@Url.RouteUrl(NewsDefaults.Routes.Public.NewsArchive)">@T("Plugins.Misc.News.ViewAll")</a>
        </div>
    </div>
}